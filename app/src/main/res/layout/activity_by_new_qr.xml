<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- QR Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Me"
                    android:textColor="@color/secondary_button"
                    android:background="@drawable/button_bg1"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"/>

                <ImageView
                    android:id="@+id/qrImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_qr"/>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/login_app_logo"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <!-- Form Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Details"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <!-- Name Row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="First Name*"
                        android:text="Pankaj"
                        android:background="@drawable/edit_text_bg2"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Last Name*"
                        android:text="Qureshi"
                        android:background="@drawable/edit_text_bg2"
                        android:padding="10dp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Email -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:text="Pankaj.Qureshi@Sacular.com"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <!-- Mobile -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number*"
                    android:text="+91 9897000001"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="phone"/>

                <!-- Vehicle Number -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vehicle Number"
                    android:text="UP09K4312"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <!-- RC Photo -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/copy_icon"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_bg2"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginVertical="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Address"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House no, / Building Name"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Road Name / Area / Colony"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pin code"
                    android:background="@drawable/edit_text_bg2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:inputType="number"/>

                <!-- City + State -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:background="@drawable/edit_text_bg2"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:background="@drawable/edit_text_bg2"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Buy Now Button -->
                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg1"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
