<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!-- Order Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/qrCodeImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="QR Code"
                        android:src="@drawable/ic_qr" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Physical QR Code"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="For Chevrolet Spark on 10 Jun 2025 05 : 04 pm"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Order ID: DIGI-QR-25"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/share_pin_icon"
                                app:tint="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share with your friends"
                                android:textColor="#333333"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Status and Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Status : Pending"
                    android:textColor="#FF9A00"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Shipping Address: Gali No.13 Sahin bhagh, Okhala, Delhi, 110094, India"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Order Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row Item -->
                <TextView
                    android:id="@+id/trackOrder"
                    style="@style/OrderRow"
                    android:text="Track Order" />

                <TextView
                    style="@style/OrderRow"
                    android:text="Buy New QR Code" />

                <TextView
                    android:id="@+id/byForOther"
                    style="@style/OrderRow"
                    android:text="Buy another QR Code" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F5F5F5" />

            <!-- Review Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp"
                android:text="Howâ€™s your item?"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reviewBtn"
                style="@style/OrderRow"
                android:text="Share product review" />

            <!--<TextView
                style="@style/OrderRow"
                android:text="Share a video review" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F5F5F5" />

            <!-- Order Info Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp"
                android:text="Order Info"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orderDetails"
                style="@style/OrderRow"
                android:text="View order details" />

            <TextView
                android:id="@+id/downloadInvoice"
                style="@style/OrderRow"
                android:text="Download Invoice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Ordered on 14 April 2024"
                android:textColor="#999999"
                android:textSize="12sp" />

            <!-- Bottom Services -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_button_inactive"
                    android:padding="10dp"
                    android:text="Vehicle Information"
                    android:textColor="#FF9A00" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_button_inactive"
                    android:padding="10dp"
                    android:text="Check Challan"
                    android:textColor="#FF9A00" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_inactive"
                    android:padding="10dp"
                    android:text="Service History"
                    android:textColor="#FF9A00" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
